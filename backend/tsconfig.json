{
  "compilerOptions": {
    "target": "ESNext",        
    "module": "ESNext",        
    "moduleResolution": "node",
    "outDir": "./dist",        
    "rootDir": "./src",
    "esModuleInterop": true,   
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
